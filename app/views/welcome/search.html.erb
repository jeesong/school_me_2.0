<div class="fixed">
  <nav class="top-bar">
    <ul class="title-area" >
      <li class="name">
        <h1><a href="/home">SchoolME</a></h1>
      </li>
    </ul>
    <section class="top-bar-section">
      <ul class="right">
        <li class>
          <a href="#" data-reveal-id="myModal">Map Key</a>
        </li>
        <li class="has-dropdown">
          <a>+</a>
          <ul class="dropdown">
            <li><label>Search Nearby ZIP<label></li>
            <% if @nearby_zip != nil %>
              <% @nearby_zip.each do |zip| %>
                <li><a href="/search?search=<%= zip %>"><%= zip %></a></li>
              <% end %>
            <% end %>
          </ul>
        </li>
      </ul>
    </section>
  </nav>
</div> <!-- ends div "fixed" -->

<div class="left-content">
  <h5 id="schoolType">Elementary Schools:</h5>
  <% for i in 0..@name.length-1 %>
    <% if @grade_range[i] == "K-6" || @grade_range[i] == "K-5" ||
       @grade_range[i] == "PK-6" || @grade_range[i] == "PK-5" ||
       @grade_range[i] == "K-4" || @grade_range[i] == "5-6" %>
      &nbsp&nbsp<a id='<%= @gsid[i] %>,<%= @lat[i] %>,<%= @long[i]%>' class='school_list'><%= @name[i] %></a>
      <% if @rating[i] == "" %>
        <br><br>
      <% else %>
        (<%= @rating[i] %>)<br><br>
      <% end %>
    <% end %>
  <% end %>
  <h5 id="schoolType">Middle Schools:</h5>
  <% for i in 0..@name.length-1 %>
    <% if @grade_range[i] == "6-8" || @grade_range[i] == "7-8" %>
      &nbsp&nbsp<a id='<%= @gsid[i] %>,<%= @lat[i] %>,<%= @long[i]%>' class='school_list'><%= @name[i] %></a>
      <% if @rating[i] == "" %>
        <br><br>
      <% else %>
        (<%= @rating[i] %>)<br><br>
      <% end %>
    <% end %>
  <% end %>
  <h5 id="schoolType">High Schools:</h5>
  <% for i in 0..@name.length-1 %>
    <% if @grade_range[i] == "9-12" %>
      &nbsp&nbsp<a id='<%= @gsid[i] %>,<%= @lat[i] %>,<%= @long[i]%>' class='school_list'><%= @name[i] %></a>
      <% if @rating[i] == "" %>
        <br><br>
      <% else %>
        (<%= @rating[i] %>)<br><br>
      <% end %>
    <% end %>
  <% end %>
  <h5 id="schoolType">Other:</h5>
  <% for i in 0..@name.length-1 %>
    <% if @grade_range[i] != "9-12" && @grade_range[i] != "6-8" &&
       @grade_range[i] != "K-5" && @grade_range[i] != "K-6" &&
       @grade_range[i] != "PK-5" && @grade_range[i] != "PK-6" &&
       @grade_range[i] != "7-8" && @grade_range[i] != "K-4" %>
      &nbsp&nbsp<a id='<%= @gsid[i] %>,<%= @lat[i] %>,<%= @long[i]%>' class='school_list'><%= @name[i] %></a>, <%= @grade_range[i] %>
      <% if @rating[i] == "" %>
        <br><br>
      <% else %>
        (<%= @rating[i] %>)<br><br>
      <% end %>
    <% end %>
  <% end %>
  <hr>

</div> <!-- ends "left-content" div -->

<div id="map"></div>
<div id="myModal" class="reveal-modal tiny">
  <table id="mapKey">
    <tr>
      <th style="background-color:#34282C" width="120"><font color="white">Symbol</th>
      <th style="background-color:#34282C" width="170"><font color="white">Type</th>
    </tr>
    <tr>
      <td style="text-align:center"><i class="fa fa-circle-o"></i></td>
      <td>Public</td>
    </tr>
    <tr>
      <td style="text-align:center"><i class="fa fa-circle"></i></td>
      <td>Private</td>
    </tr>
    <tr>
      <th style="background-color:#34282C" width="120"><font color="white">Color</th>
      <th style="background-color:#34282C" width="170"><font color="white">Grade Level</th>
    </tr>
    <tr>
      <td style="background-color:#C00000"></td>
      <td>Elementary</td>
    </tr>
    <tr>
      <td style="background-color:#65cc00"></td>
      <td>Middle</td>
    </tr>
    <tr>
      <td style="background-color:#3298ff"></td>
      <td>High</td>
    </tr>
    <tr>
      <td style="background-color:#471947"></td>
      <td>Other</td>
    </tr>
  </table>
  <a class="close-reveal-modal">&#215;</a>
</div>

